smartsoundsync

sudo apt install ntp
//edit config file
sudo systemctl restart ntp

sudo apt install nodejs
sudo apt install npm
npm install pad

git clone git@github.com:mikeszila/smartsoundsync.git





get and compile librespot

sudo apt install curl
curl https://sh.rustup.rs -sSf | sh
sudo apt-get install build-essential
sudo apt install cargo

git clone git@github.com:mikeszila/librespot.git
cd librespot

cargo build --no-default-features --releasesmartsoundsync

cp target/release/librespot /home/pi/smartsoundsync/

//shairport-sync

sudo apt install build-essential git xmltoman
apt install autoconf automake libtool libdaemon-dev libpopt-dev libconfig-dev
apt install avahi-daemon libavahi-client-dev
apt install libssl-dev
git clone https://github.com/mikeszila/shairport-sync.git
cd shairport-sync/
autoreconf -i -f
./configure --with-avahi --with-ssl=openssl --with-metadata --with-systemd
make
cp shairport-sync /home/pi/smartsoundsync/
